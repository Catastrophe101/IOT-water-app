<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutDeveloper"
    android:background="#d1c9ed">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        app:srcCompat="@mipmap/thatsme"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="74dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="330dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="About Developer"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:gravity="center"
        android:id="@+id/textView13"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Nishit Ahuja"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="167dp"
        android:layout_height="32dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Pursuing B.E"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="164dp"
        android:layout_height="38dp"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Computer Engineering (2018-2019)"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="E-mail- nishitahuja@gmail.com"
        android:textAppearance="@android:style/TextAppearance.Medium" />
</RelativeLayout>